                ],
                "description": "Create new envelope in system",
                "parameters": [
                    {
                        "in": "query",
                        "name": "title",
                        "description": "Envelope that we want to create",
                        "schema": {
                            "$ref": "#/definitions/Envelope"
                        }
                    },
                    {
                        "in": "query",
                        "name": "budget",
                        "description": "Envelope that we want to create",
