                        }
                    }
                ],
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "200": {
                        "description": "Delete an envelope by Id",
                        "schema": {
                            "$ref": "#/definitions/Envelope"
                        }
                    },
                    "404": {
                        "description": "Envelope not found",
                        "schema": {
                            "$ref": "#/definitions/Envelope"
                        }
                    }
                }
            }
        },
        "/envelopes/{envelopeId}?title={title}&budget={budget}": {
            "parameters": [
                {
                    "name": "id",
                    "in": "path",
                    "required": true,
                    "description": "ID of envelope that we want to find",
                    "type": "integer"
                }
            ],
            "put": {
                "summary": "Update envelope with given ID",
                "tags": [
                    "Envelopes"
                ],
                "parameters": [
                    {
                        "in": "query",
                        "name": "title",
